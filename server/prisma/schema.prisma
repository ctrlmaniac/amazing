generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  fname    String
  lname    String
  password String
  role     Role   @default(USER)
}

enum Role {
  ADMIN
  USER
}
